<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>Censo Educacao Superior 2025</display-name>

    <context-param>
        <param-name>jdbc.url</param-name>
        <param-value>jdbc:h2:./data/censo2025;DB_CLOSE_DELAY=-1</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.user</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.password</param-name>
        <param-value></param-value>
    </context-param>

    <listener>
        <listener-class>br.gov.inep.censo.config.DatabaseBootstrapListener</listener-class>
    </listener>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>br.gov.inep.censo.web.filter.AuthFilter</filter-class>
        <init-param>
            <param-name>loginPath</param-name>
            <param-value>/login</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/app/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CsrfFilter</filter-name>
        <filter-class>br.gov.inep.censo.web.filter.CsrfFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CsrfFilter</filter-name>
        <url-pattern>/app/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.gov.inep.censo.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>br.gov.inep.censo.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>br.gov.inep.censo.web.MenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/app/menu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AlunoServlet</servlet-name>
        <servlet-class>br.gov.inep.censo.web.AlunoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlunoServlet</servlet-name>
        <url-pattern>/app/aluno</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CursoServlet</servlet-name>
        <servlet-class>br.gov.inep.censo.web.CursoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CursoServlet</servlet-name>
        <url-pattern>/app/curso</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CursoAlunoServlet</servlet-name>
        <servlet-class>br.gov.inep.censo.web.CursoAlunoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CursoAlunoServlet</servlet-name>
        <url-pattern>/app/curso-aluno</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DocenteServlet</servlet-name>
        <servlet-class>br.gov.inep.censo.web.DocenteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DocenteServlet</servlet-name>
        <url-pattern>/app/docente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IesServlet</servlet-name>
        <servlet-class>br.gov.inep.censo.web.IesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IesServlet</servlet-name>
        <url-pattern>/app/ies</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
