<?xml version="1.0" encoding="UTF-8"?>
<zk>
    <style src="/css/pdf-like.css"/>

    <window id="winCursoAlunoForm" apply="br.gov.inep.censo.web.zk.modulo.CursoAlunoComposer"
            border="normal" width="100%" sclass="sheet" position="center,top">
        <vbox spacing="10px" width="100%">
            <label value="Modulo Vinculo" sclass="official-tag"/>
            <label value="Formulario de Vinculo Aluno x Curso (Registro 42)" style="font-size:22px;font-weight:bold;"/>
            <label value="Normalizacao 1..N para financiamentos, apoio social, atividades e reservas de vagas + campos complementares."/>

            <label id="lblErroFormCursoAluno" sclass="alert" visible="false"/>

            <grid width="100%">
                <columns>
                    <column width="38%"/>
                    <column width="62%"/>
                </columns>
                <rows>
                    <row><label value="Aluno"/><combobox id="cmbAlunoCursoAluno" readonly="true" width="520px"/></row>
                    <row><label value="Curso"/><combobox id="cmbCursoCursoAluno" readonly="true" width="520px"/></row>
                    <row><label value="ID na IES - Identificacao unica"/><textbox id="txtIdAlunoIesCursoAluno" width="240px"/></row>
                    <row><label value="Periodo de referencia (AAAA)"/><textbox id="txtPeriodoRefCursoAluno" width="120px"/></row>
                    <row><label value="Codigo do polo do curso a distancia"/><textbox id="txtCodigoPoloCursoAluno" width="180px"/></row>
                    <row><label value="Turno do aluno"/><combobox id="cmbTurnoCursoAluno" readonly="true" width="260px"/></row>
                    <row><label value="Situacao de vinculo do aluno ao curso"/><combobox id="cmbSituacaoCursoAluno" readonly="true" width="260px"/></row>
                    <row><label value="Curso origem"/><textbox id="txtCursoOrigemCursoAluno" width="180px"/></row>
                    <row><label value="Semestre de conclusao (01AAAA / 02AAAA)"/><textbox id="txtSemestreConclusaoCursoAluno" width="180px"/></row>
                    <row><label value="Aluno PARFOR"/><combobox id="cmbAlunoParforCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Segunda Licenciatura / Formacao pedagogica"/><combobox id="cmbSegundaLicCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Tipo - Segunda Licenciatura / Formacao pedagogica"/><combobox id="cmbTipoSegundaLicCursoAluno" readonly="true" width="320px"/></row>
                    <row><label value="Semestre de ingresso no curso (01AAAA / 02AAAA)"/><textbox id="txtSemestreIngressoCursoAluno" width="180px"/></row>
                </rows>
            </grid>

            <label value="Forma de ingresso/selecao" style="font-weight:bold;"/>
            <grid width="100%">
                <columns>
                    <column width="38%"/>
                    <column width="62%"/>
                </columns>
                <rows>
                    <row><label value="Vestibular"/><combobox id="cmbFormaVestibularCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="ENEM"/><combobox id="cmbFormaEnemCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Avaliacao seriada"/><combobox id="cmbFormaAvaliacaoSeriadaCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Selecao simplificada"/><combobox id="cmbFormaSelecaoSimplificadaCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Egresso bi/li"/><combobox id="cmbFormaEgressoBiLiCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="PEC-G"/><combobox id="cmbFormaPecGCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Transferencia ex-officio"/><combobox id="cmbFormaTransfExOfficioCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Decisao judicial"/><combobox id="cmbFormaDecisaoJudicialCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Vagas remanescentes"/><combobox id="cmbFormaVagasRemanescentesCursoAluno" readonly="true" width="180px"/></row>
                    <row><label value="Programas especiais"/><combobox id="cmbFormaProgramasEspeciaisCursoAluno" readonly="true" width="180px"/></row>
                </rows>
            </grid>

            <label value="Financiamento (1..N)" style="font-weight:bold;"/>
            <vbox id="boxFinanciamentoCursoAluno" spacing="6px"/>

            <label value="Apoio Social (1..N)" style="font-weight:bold;"/>
            <vbox id="boxApoioCursoAluno" spacing="6px"/>

            <label value="Atividades Extracurriculares (1..N)" style="font-weight:bold;"/>
            <vbox id="boxAtividadeCursoAluno" spacing="6px"/>

            <label value="Reserva de Vagas / Programas Diferenciados (1..N)" style="font-weight:bold;"/>
            <vbox id="boxReservaCursoAluno" spacing="6px"/>

            <label value="Campos complementares do leiaute (Registro 42)" style="font-weight:bold;"/>
            <vbox id="boxCamposComplementaresCursoAluno" spacing="6px"/>

            <hbox spacing="8px" sclass="top-actions">
                <button id="btnSalvarFormCursoAluno" label="Salvar Registro 42" sclass="btn"/>
                <button id="btnVoltarFormCursoAluno" label="Voltar para Listagem" sclass="btn-outline"/>
            </hbox>
        </vbox>
    </window>
</zk>

