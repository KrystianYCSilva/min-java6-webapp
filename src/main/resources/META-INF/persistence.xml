<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="censo-superior-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>br.gov.inep.censo.model.Aluno</class>
        <class>br.gov.inep.censo.model.Curso</class>
        <class>br.gov.inep.censo.model.CursoAluno</class>
        <class>br.gov.inep.censo.model.Docente</class>
        <class>br.gov.inep.censo.model.Ies</class>
        <class>br.gov.inep.censo.model.Municipio</class>
        <class>br.gov.inep.censo.model.OpcaoDominio</class>
        <class>br.gov.inep.censo.model.LayoutCampo</class>
        <class>br.gov.inep.censo.model.Usuario</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            <property name="hibernate.jdbc.batch_size" value="25"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
