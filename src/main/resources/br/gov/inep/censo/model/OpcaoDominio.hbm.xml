<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="br.gov.inep.censo.model.OpcaoDominio" table="dominio_opcao" mutable="false">
        <id name="id" column="id" type="long">
            <generator class="identity"/>
        </id>
        <property name="categoria" column="categoria" type="string" not-null="true" length="60"/>
        <property name="codigo" column="codigo" type="string" not-null="true" length="30"/>
        <property name="nome" column="nome" type="string" not-null="true" length="255"/>
    </class>
</hibernate-mapping>
