<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="br.gov.inep.censo.model.Usuario" table="usuario" dynamic-update="true">
        <id name="id" column="id" type="long">
            <generator class="identity"/>
        </id>
        <property name="login" column="login" type="string" not-null="true" length="50"/>
        <property name="nome" column="nome" type="string" not-null="true" length="120"/>
        <property name="ativo" column="ativo" type="boolean" not-null="true"/>
    </class>
</hibernate-mapping>
